{
    "compilerOptions": {
        "outDir": "./dist/",
        "rootDir": "./src/",
        "target": "ES2019", // ~node10
        "module": "commonjs",
        "lib": [
            "es2015",
            "es2016",
            "es2017",
            "es2018",
            "es2019"
        ],
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "strict": true,
        "esModuleInterop": true,
        "noImplicitAny": false
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx",
        "tests/**/*.ts",
        "tests/**/*.tsx",
        "serve.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}